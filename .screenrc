source /etc/screenrc

startup_message off
defutf8 on
defscrollback 5000
caption always '%{gk}[ %H %{g}][%= %{wk}%?%-Lw%?%{=b kR}(%{W}%n*%f %t%?(%u)%?%{=b kR})%{= kw}%?%+Lw%?%?%= %{g}][%{Y}%l%{g}]%{=b C}[ %m/%d %c ]%{W}'
bell_msg 'Bell in window %n^G'

bind j focus down
bind k focus up
bind t focus top
bind b focus bottom
