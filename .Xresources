!! Xft
Xft.dpi:            115
Xft.antialias:      true
Xft.rgba:           bgr
Xft.autohint:       true
Xft.hintstyle:      full

!! URXVT
urxvt*font:         xft:DejaVu Sans Mono for Powerline:size=10, xft:DevaVu Sans Mono:size=10
urxvt*boldFont:     xft:DejaVu Sans Mono for Powerline:bold:size=10, xft:DevaVu Sans Mono:bold:size=10
urxvt*italicFont:   xft:DejaVu Sans Mono for Powerline:italic:size=10, xft:DevaVu Sans Mono:italic:size=10

urxvt.scrollBar:    false

urxvt.perl-ext-common: default,matcher,font-size
urxvt.url-launcher: xdg-open
urxvt.matcher.button: 1
urxvt.keysym.C-Up:     perl:font-size:increase
urxvt.keysym.C-Down:   perl:font-size:decrease
